<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tab_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="52dip"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn1_icon"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:scaleType="fitXY"
                android:src="@drawable/tab_map" />

            <TextView
                android:id="@+id/btn1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="首页"
                android:textColor="@color/black"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn2_icon"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:scaleType="fitXY"
                android:src="@drawable/tab_task" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="任务管理"
                android:textColor="@color/black"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clipChildren="false"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn3_icon"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:scaleType="fitXY"
                android:src="@drawable/tab_msg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="消息"
                android:textColor="@color/black"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn4_icon"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:scaleType="fitXY"
                android:src="@drawable/tab_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="我的"
                android:textColor="@color/black"
                android:textSize="11dp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/tab_main_content"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="52dp"
        android:layoutDirection="ltr"
        android:orientation="vertical" />

    <View
        android:id="@+id/tab_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:layout_marginBottom="52dp"
        android:background="#00000000" />
</FrameLayout>

